<p style="color: green"><%= notice %></p>

<h1><%= t("list", models: t("activerecord.models.book")) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
      <%= link_to t("books.show_this_book"), book %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
<%= link_to t("books.New book"), new_book_path %>
</nav>
